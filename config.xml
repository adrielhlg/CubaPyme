<?xml version='1.0' encoding='utf-8'?>
<widget id="cu.home.dev.cubapyme" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CubaPyme</name>
    <description>Aplicación Cubana para geolocalizar las pymes del país</description>
    <author email="cubapymemapa@gmail.com" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
	<preference name="AndroidWindowSplashScreenBackground" value="#FFFFFF" />
	<preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/icon.png" />
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
	<allow-intent href="whatsapp:*" />
	<allow-intent href="tg:*" />
	<allow-navigation href="*" />
    <preference name="CordovaWebViewEngine.setCspEnabled" value="false" />	
    <icon src="res/icon.png" />	
	<preference name="OverrideUserAgent" value="CubaPymeBrowser" />
	<preference name="android-minSdkVersion" value="21" />
</widget>
